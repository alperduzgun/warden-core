{
  "name": "@warden/cli",
  "version": "2.0.0",
  "description": "Modern CLI for Warden - AI-Powered Code Analysis",
  "main": "dist/cli.js",
  "bin": {
    "warden-cli": "dist/cli.js"
  },
  "type": "module",
  "scripts": {
    "dev": "tsx src/cli.tsx",
    "dev:watch": "tsx watch src/cli.tsx",
    "build": "tsc && chmod +x dist/cli.js",
    "start": "node dist/cli.js",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "warden",
    "cli",
    "devops",
    "security",
    "ink",
    "react"
  ],
  "author": "Warden Team",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.4.1",
    "ink": "^5.0.1",
    "ink-gradient": "^3.0.0",
    "ink-select-input": "^6.0.0",
    "ink-spinner": "^5.0.0",
    "ink-text-input": "^6.0.0",
    "meow": "^13.2.0",
    "nanoid": "^5.0.9",
    "react": "^18.3.1",
    "yaml": "^2.8.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "@types/react": "^19.0.6",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "eslint": "^9.17.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.1.0",
    "tsx": "^4.19.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
